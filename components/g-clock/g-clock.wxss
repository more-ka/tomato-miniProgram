/* components/g-button/g-clock.wxss */
.clock{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.clock:active{
  opacity: 0.8;
}
.clock text{
  position: absolute;
  color: #fff;
  font-size: 30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
image.mini{
  width: 300rpx;
  height: 300rpx;
}
image{
  width: 360rpx;
  height: 360rpx;
}