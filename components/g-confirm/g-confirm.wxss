/* components/g-confirm/g-confirm.wxss */
.confirmWrapper {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
}

.confirm {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx 12rpx 0;
  border-radius: 16rpx;
  background: #fff;
}

.input {
  background: #f2f2f2;
  width: 660rpx;
  display: block;
  border-radius: 16rpx;
  padding: 12rpx 12rpx;
  height: 180rpx;
}

.actions {
  display: flex;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  padding: 16rpx;
}

.actions view {
  flex: 1;
}

.actions view:first-child {
  color: #f6705a;
}


.actions view:active {
  opacity: 0.5;
}