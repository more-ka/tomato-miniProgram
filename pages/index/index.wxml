<!-- index.wxml -->
<view class="container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item" wx:for="{{todoList}}" wx:key="index">
      <view class="select {{item.finished===true?'active':''}}"  data-index="{{index}}" bind:tap="selectedClick">
      </view>
      <view class="content">
        {{item.text}}
      </view>
    </view>
  </scroll-view>
  <!-- <g-button change text="我是一只按钮"></g-button> -->
  <!-- <g-button size="mini" text="我是一只按钮"></g-button> -->
  <!-- <g-button size="mini" change text="我是一只按钮"></g-button> -->
  <g-button class="click" bind:tap="showConfirm" text="添加任务" size="mini"></g-button>
  <g-confirm placeholder="默认值" bind:sureClick="sureClick" bind:cancelClick="cancelClick" visible="{{visible}}"></g-confirm>
  <g-clock size="mini" text="开始番茄任务"></g-clock>

</view>