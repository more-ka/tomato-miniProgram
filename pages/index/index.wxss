/* 任务列表 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx 0;
  background: #f2f2f2;
  height: 100vh;
}
.todoList{
  display: flex;
  flex: 1;
  height: 55%;
}
.todoList .item{
  display: flex;
  margin: 16rpx 12rpx;
  padding: 12rpx 0;
  background: #fff;
  border-radius: 12rpx;
  justify-content: center;
  transition: all 0.5s;
  border: 1px solid transparent;
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.2);
}
.todoList .item.active{
  border: 1px solid #f6705a;
}
.updateText,
.deleteIcon{
  width: 46rpx;
  height: 46rpx;
  margin: auto 20rpx;
  transition: all .3s;
}
.todoList .item .content{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.todoList .item .select{
  width: 40rpx;
  height: 40rpx;
  margin: auto 20rpx;
  border: 1px solid #f6705a;
  border-radius: 50%;
  transition: all .3s;
}
.todoList .item .select.active{
  background: #f6705a;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}
.tips{
  background: #0e141f;
  padding: 8rpx 20rpx;
  color: #ffcb36;
  font-size: 32rpx;
  text-align: center;
}
.toTomato{
  height: 360rpx;
  width: 100%;
}