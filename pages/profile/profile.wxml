<!-- pages/profile/profile.wxml -->
<view class="container">
  <view class="header">
    <view class="picture">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="userName title">
      <open-data type="userNickName"></open-data>
    </view>
    <button open-type="contact" class="contact">问题反馈</button>
  </view>
  <view class="main">
    <view class="item" wx:for="{{list}}" wx:key="key" wx:for-index="key">
      <view class="title">{{key}}</view>
      <view class="content" wx:for="{{list[key]}}" wx:key="index">
        <view class="time">{{item.time}}</view>
        <view class="text">{{item.text}}</view>
      </view>
    </view>
  </view>
</view>